{
  "name": "ツリーにぶら下がった漫画を一気に読むやつ",
  "version": "1.0.2",
  "manifest_version": 2,
  "description": "Twitterでリプライツリーに漫画が連投されている時、一括表示するボタンを生成します。",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage"
  ],
  "icons" : {
    "128": "icon.png"
  },
  "content_scripts": [{
    "matches": ["https://twitter.com/*"],
    "js": [
      "js/content.js"
    ],
    "run_at": "document_end",
    "all_frames": true
  }]
}